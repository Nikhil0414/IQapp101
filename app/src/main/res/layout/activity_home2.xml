<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="PROJECT"
                android:background="@color/black"
                android:textColor="#B10C0C"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="338dp"
                android:layout_height="190dp"
                android:layout_marginTop="20dp"
                android:background="#c1c1c1"
                android:src="@drawable/app1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Just 4 Fun"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="338dp"
                android:layout_height="190dp"
                android:background="#c1c1c1"
                android:src="@drawable/web1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Expandable Card"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="338dp"
                android:layout_height="190dp"
                android:background="#c1c1c1"
                android:src="@drawable/app2" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Editable Text"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="338dp"
                android:layout_height="190dp"
                android:background="#c1c1c1"
                android:src="@drawable/web2" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Flame Cards"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="338dp"
                android:layout_height="190dp"
                android:background="#c1c1c1"
                android:src="@drawable/app3" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Change cursor on Image hover"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp" />
            <ImageView
                android:layout_width="338dp"
                android:layout_height="190dp"
                android:background="#c1c1c1"
                android:src="@drawable/web3" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Expandable Strings"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>